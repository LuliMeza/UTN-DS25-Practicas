
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id Int @id @default(autoincrement())
  title String
  autor String
  categoria Categoria
  descripcion String
  imagen String
  createdAt DateTime @default(now())
}

enum Categoria {
  Ficcion
  Ciencia
  Historia 
  Infancia
}